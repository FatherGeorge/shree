/********************************
      Lightbox control
*********************************/
.uk-lightbox-content
  .uk-slidenav
    display: inline-block;
    box-sizing: border-box;
    width: auto;
    height: 60px;
    line-height: 60px;
    color: rgba(255,255,255,.8);
    font-size: 20px;
    text-align: center;
    position: absolute;
    top: 50%;
    z-index: 1;
    margin-top: -30px;
    padding: 0;

  .uk-slidenav-next
    right: 20px;

  .uk-slidenav-previous
    left: 20px;