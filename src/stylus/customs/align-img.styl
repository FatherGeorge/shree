/********************************
      Align image content
*********************************/
.alignleft
  float left
  margin 0 30px 30px 0

  +to-width($screen-sm-max)
    float none
    width 100%
    margin 10px auto

.alignright
  float right
  margin 0 0 30px 30px

  +to-width($screen-sm-max)
    float none
    width 100%
    margin 10px auto