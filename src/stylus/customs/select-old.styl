/********************************
      Select control custom
*********************************/
.select-include
  position relative
  z-index 5
  margin-top 10px
  padding-right: 24px;
  +to-width($screen-xm-max)
    padding-right 0
  .selectize-control
    position relative
    z-index 3
    height 76px
    min-width 100%
    padding 0
    &--simple
      .selectize-control
        height 48px

  .selectize-control.single
    .selectize-input
      height: 76px;
      border-radius: 3px;
      padding 35px 18px 20px 18px
      background #fff
      border 1px solid #fff
      box-shadow none
      +to-width($screen-sm-max)
        height 65px
        padding-top 30px

      .item
        display block
        font-family $font-bold
        font-size 18px
        line-height 1.3
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        +to-width($screen-sm-max)
          font-size 14px
      input
        width 100%!important
        font-family $base-font-family
        line-height 1 !important
        font-size 18px
        font-weight 300
        color transparent
        //text-shadow 0 0 0 #000
        +to-width($screen-sm-max)
          font-size 16px
      &.has-items
        input
          display none!important
      &:after
        content ''
        display block
        position absolute
        top 50%
        width 17px
        height 9px
        margin-top -4px
        right 17px
        border 0 none
        background url(../img/svg/select_control.svg) 50% 50% no-repeat
      &.dropdown-active
        &:after
          transform scale(1, -1)
        &:before
          display none!important

  .selectize-dropdown
    position absolute
    left -2px!important
    z-index 10
    //width 364px!important
    width calc(100% + 4px)!important
    padding 0
    margin-top 4px
    border 0 none
    border-radius 4px
    box-shadow 0 6px 22px rgba(0, 5, 38, 0.15)
    .slimScrollBar
      border-radius 4px
      opacity 1!important

  .selectize-dropdown .optgroup-header,
  .selectize-dropdown [data-selectable]
    line-height 22px !important
    padding 5px 15px !important
    font-family $base-font-family
    font-size 14px !important
    color #212121
    &:first-of-type
      padding-top 20px!important
    &:last-of-type
      padding-bottom 17px!important
    &:hover
      background #f3f5f7
      &:first-of-type
        border-top-left-radius 4px
        border-top-right-radius 4px
      &:last-of-type
        border-bottom-left-radius 4px
        border-bottom-right-radius 4px

  .selectize-dropdown-content
    border-radius 4px
    .optgroup
      border-top 0 none
      margin-bottom 4px
      &:last-of-type
        margin-bottom 10px
      .optgroup-header
        padding 13px 15px!important
        margin-bottom 10px
        font-size 16px !important
        border-bottom 2px solid #f3f5f7
        &:first-of-type
          padding 14px 15px!important
        &:hover
          background transparent
      .option
        padding 6px 15px!important


  .form__input--form
    .selectize-control
      height 40px
      min-width 0

    .selectize-control.single
      .selectize-input
        height 40px
        padding-top 10px
        padding-left 12px
        border 1px solid #C4C6D4
        box-shadow none
        +to-width($screen-sm-max)
          padding-left 15px
        &:after
          right 12px
          width 13px
          height 7px
          margin-top -3px
          background url(../img/svg/select-arrow-2.svg) 50% 50% no-repeat
        .item
          font-size 14px
        input
          width 100%!important
          font-size 14px
      .focus
        border 1px solid #58BDFF

      .selectize-dropdown .optgroup-header,
      .selectize-dropdown [data-selectable]
        &:first-of-type
          padding-top 13px!important
        &:last-of-type
          padding-bottom 13px!important

.select_option
  position relative
  width 100%

select::-webkit-inner-spin-button {
  cursor: pointer;
}

.select_option:after {
  pointer-events: none;
  background: #fff url(../img/svg/select_control.svg) 100% 50% no-repeat;
  height: 49px;
  width: 44px;
  position: absolute;
  right: 0;
  top: 0;
  content ''
}

.select-include--simple
  .selectize-control.single
    .selectize-input
      height: 48px;
      padding 15px 18px
      background #fff
      +to-width($screen-sm-max)
        height 48px
        padding-top 15px

      .item
        display block
        font-family $font-base
        font-size: 15px;
        color: #8e9da7;
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        +to-width($screen-sm-max)
          font-size 14px

      input
        width 100%!important
        line-height 1 !important
        font-family $font-base
        font-size: 15px;
        color transparent