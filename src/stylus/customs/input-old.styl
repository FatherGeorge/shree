/**********************
      Input style
**********************/
input:not([type]),
input[type=text],
input[type=password],
input[type=email],
input[type=url],
input[type=search],
input[type=tel],
input[type=number],
input[type=datetime],
input[type=datetime-local],
input[type=date],
input[type=month],
input[type=time],
input[type=week],
input[type=color]
  height: 48px;
  border-radius: 3px;
  padding 20px 18px
  background #fff
  border 1px solid #fff
  box-shadow none
  line-height 1
  width 100%
  @extend $placeholder
  @extend $touchSelectSkip

textarea
  font-family $font-base
  resize none
  width 100%
  background #fff
  border-radius: 3px;
  padding 20px 18px
  border 1px solid #fff
  box-shadow none
  line-height 1
  @extend $placeholder
  @extend $touchSelectSkip

