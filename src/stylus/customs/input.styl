input
select
  max-width 100%
  margin 0
  outline 0 none
  vertical-align top
  appearance none
  
  &:not([type]),
  &[type="text"],
  &[type=password],
  &[type=email],
  &[type=url],
  &[type=search],
  &[type=tel],
  &[type=number],
  &[type=datetime]
    border none
    border-bottom 1px solid $base-color
    line-height 58px
    padding 0
    font-size 16px
    height: 58px;
    background transparent
    color #000
    width 100%

  @extend $placeholder
  @extend $touchSelectSkip

input:not([type="submit"]):focus,
input:not([type="button"]):focus
select:focus,
textarea:focus
  background-color transparent
  border none
  border-bottom 1px solid $base-color

input[type="button"]:focus
  background-color $base-color - #222
  color #fff
  box-shadow 0 0 7px rgba(0,0,0,.1)

select,
textarea
  width 100%
  color #000
  @extend $placeholder
  @extend $touchSelectSkip

textarea
  max-width 100%
  margin 0
  outline 0 none
  vertical-align top
  appearance none
  height 75px
  resize none
  border none
  border-bottom 1px solid $base-color
  line-height 1.33
  color #000
  padding 16px 0
  background transparent

::-ms-clear
  display none

input:checked
textarea:checked
select:checked
input[value=""]
  background transparent
  color #000

input:-internal-autofill-previewed, input:-internal-autofill-selected, textarea:-internal-autofill-previewed, textarea:-internal-autofill-selected, select:-internal-autofill-previewed, select:-internal-autofill-selected {
  background transparent !important;
  background-image: none !important;
  color #fff !important;
}

.success
  background-color #f7f7f7
  padding 15px
  font-style italic
  text-align center
  margin-top 15px