/***************************************
      Scroll up icon
****************************************/
.up__btn {
  opacity: 0;
  visibility: hidden;
  z-index: -1;
  position: fixed;
  bottom: 0;
  right: 0;
  width: 0;
  height: 0;
  border-width: 0;
  transition: all 1s;
}

.up__btn.visible {
  opacity: 1;
  visibility: visible;
  z-index: 10000;
  border-style: solid;
  border-width: 35px;
  border-color: $base-color transparent transparent $base-color;
  transform: rotate(180deg);
  font-size: 25px;
  transition: all 1s;
}

.up__btn.visible:before {
  font-family: FontAwesome;
  display: inline-block;
  font-weight: 400;
  font-style: normal;
  line-height: 1;
  content: "\f103";
  color:  #fff;
  font-size: 25px;
  position: absolute;
  bottom: 0;
  right: 5px;
}