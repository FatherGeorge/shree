/***************************************
      Scroll down animation icon
****************************************/
#scroll-down
  position: absolute;
  bottom: -35px;
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;

  .mouse-scroll {
    display: flex;
    align-items: center
    justify-content center
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0,0,0,.2);
    border-radius 50%
    width 70px
    height 70px
    text-align center

    .left {
      margin: 0;
      text-align center

      > span {
        transform: rotate(45deg);
      }
      .unu {
        animation-delay: .3s;
        animation-direction: alternate;
      }
      .doi {
        animation-delay: .2s;
        animation-direction: alternate;
      }
    }
  }
  span {
    display: block;
    width: 5px;
    height: 5px;
    border-right: 2px solid $base-color;
    border-bottom: 2px solid $base-color;
    margin: 2px auto;
  }
  .unu {
    margin-top: 4px;
  }
  .unu,
  .doi,
  .trei {
    animation: mouse-scroll 1s infinite;
  }
  .mouse {
    height: 40px;
    width: 22px;
    border-radius: 10px;
    transform: none;
    border: 2px solid #dbdbdb;
  }
  .wheel {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    display: block;
    margin: 2px auto 0;
    background-color: $base-color;
    position: relative;
  }
  .wheel {
    animation: mouse-wheel 1.2s ease infinite;
  }

  @keyframes mouse-wheel {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(10px);
    }
  }

  @-webkit-keyframes mouse-wheel {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 0;
      transform: translateY(10px);
    }
  }

  @-moz-keyframes mouse-wheel {
    0% {
      top: 1px;
    }
    50% {
      top: 2px;
    }
    100% {
      top: 3px;
    }
  }

  @-webkit-keyframes mouse-scroll {
    0% {
      opacity: 0;
    }
    50% {
      opacity: .5;
    }
    100% {
      opacity: 1;
    }
  }
  @-moz-keyframes mouse-scroll {
    0% {
      opacity: 0;
    }
    50% {
      opacity: .5;
    }
    100% {
      opacity: 1;
    }
  }
  @-o-keyframes mouse-scroll {
    0% {
      opacity: 0;
    }
    50% {
      opacity: .5;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes mouse-scroll {
    0% {
      opacity: 0;
    }
    50% {
      opacity: .5;
    }
    100% {
      opacity: 1;
    }
  }