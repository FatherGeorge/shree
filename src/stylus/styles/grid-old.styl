.row
  margin-left ($grid-gutter-width / -2)
  display flex
  flex-wrap wrap
  padding 0
  list-style none
  
  &:after,
  &:before
    content ""
    display block
    overflow hidden
  
  &:after
    clear both  

  +.row
    margin-top 25px

  > [class*=col-]
    box-sizing border-box
    padding-left ($grid-gutter-width / 2)
    float left
    clear none
    text-align inherit
    flex none
    margin 0

.col-12
