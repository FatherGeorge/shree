// Адаптивная сетка для страниц flexbox
.grid
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  margin-left: -35px;

  +to-width($xxs-max-viewport)
    margin-left -15px

  &.grid-top
    align-items: flex-start;

  &.grid-bottom
    align-items: flex-end;

  &:first-child
    margin-top: -35px;
    +to-width($xxs-max-viewport)
      margin-top -15px

  &.grid-nogutter
    margin-left: 0;

    > [class*="col-"]
      padding-left: 0;

  &.grid-nomargin-top
    margin-top: 0;

    > [class*="col-"]
      margin-top: 0;

[class*="col-"]
  padding-left: 35px;
  margin: 35px 0 0 0;
  box-sizing: border-box;

  +to-width($xxs-max-viewport)
    padding-left 15px
    margin-top 15px

  &.flex-end
    align-content flex-end


.col-1-1 {
  flex: 0 0 100%;
  max-width: 100%;
  width: 100%;
}

.col-1-2,
.col-2-4,
.col-3-6,
.col-5-10 {
  flex: 0 0 50%;
  max-width: 50%;
}

.col-1-3,
.col-2-6 {
  flex: 0 0 33.333%;
  max-width: 33.333%;
}

.col-2-3,
.col-4-6 {
  flex: 0 0 66.666%;
  max-width: 66.666%;
}

.col-1-4 {
  flex: 0 0 25%;
  max-width: 25%;
}

.col-3-4 {
  flex: 0 0 75%;
  max-width: 75%;
}

.col-1-5,
.col-2-10 {
  flex: 0 0 20%;
  max-width: 20%;
}

.col-2-5,
.col-4-10 {
  flex: 0 0 40%;
  max-width: 40%;
}

.col-3-5,
.col-6-10 {
  flex: 0 0 60%;
  max-width: 60%;
}

.col-4-5,
.col-8-10 {
  flex: 0 0 80%;
  max-width: 80%;
}

.col-1-6 {
  flex: 0 0 16.666%;
  max-width: 16.666%;
}

.col-5-6 {
  flex: 0 0 83.333%;
  max-width: 83.333%;
}

.col-1-10 {
  flex: 0 0 10%;
  max-width: 10%;
}

.col-3-10 {
  flex: 0 0 30%;
  max-width: 30%;
}

.col-7-10 {
  flex: 0 0 70%;
  max-width: 70%;
}

.col-9-10 {
  flex: 0 0 90%;
  max-width: 90%;
}

.col-fit,
.col-shrink {
  -webkit-flex:0 0 auto;
  flex:0 0 auto;
  max-width:100%;
}

.col-expand,
.col-auto {
  -webkit-flex:1 1 0;
  flex:1 1 0;
}

.col-full {
  -webkit-flex:1 1 100%;
  flex:1 1 100%;
}

