// 1em = 16px default
$md-max-viewport = 74.9em // от 1199px
$sm-max-viewport =  59.9em // от 959px
$xs-max-viewport =  47.9em // от 767px
$xxs-max-viewport = 29.62em // от 474px

$md-min-viewport = 75em // до 1200px
$sm-min-viewport = 60em // до 960px
$xs-min-viewport = 48em // до 768px
$xxs-min-viewport = 29.68em // до 475px

.container
  max-width 1200px
  width 100%
  margin 0 auto
  padding-right 25px
  padding-left 25px
  +to-width($xxs-max-viewport)
    padding-right 15px
    padding-left 15px

.mq-show-md,
.mq-show-sm,
.mq-show-xm,
.mq-show-xs,
.mq-show-xxs {
  display: none !important;
}

+to-width($md-max-viewport) {
  .mq-show-md {
    display: initial !important;
  }

  .mq-hide-md {
    display: none !important;
  }

  .mq-display-block-md {
    display: block !important;
  }

  .mq-display-inline-md {
    display: inline !important;
  }

  .mq-display-inline-block-md {
    display: inline-block !important;
  }

  .mq-display-flex-md {
    display: flex !important;
  }
}

+to-width($sm-max-viewport) {
  .mq-show-sm {
    display: initial !important;
