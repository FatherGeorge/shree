$program-border = 150px
$program-width = 65%

//-----------------
.title
  &__wrapper
    text-align center
    margin 0 0 50px
    font-weight normal
    +to-width($screen-sm-max)
      margin-bottom 40px
    +to-width($screen-xs-max)
      margin-bottom 20px

    &--how
      color $base-color
      margin-bottom 40px
      +to-width($screen-xs-max)
        margin-bottom 20px

  &__main
    font-family $font-second
    font-size 40px
    +to-width($screen-sm-max)
      font-size 30px
    +to-width($screen-xs-max)
      font-size 25px

  &__subtext
    font-family $font-second
    font-size 20px
    +to-width($screen-sm-max)
      font-size: 15px;
      margin-bottom: 10px;
    +to-width($screen-xs-max)
      font-size 13px

  &__light
    text-align center
    margin-top 50px
    font-size 1.4rem
    font-weight 300

    &--pink
      color $second-color

  &__light-no-bottom-margin
    margin-bottom 5px
    font-weight 300
    +to-width($screen-sm-max)
      margin-bottom 0
    +to-width($screen-xs-max)
      margin-bottom 0

  &__pink
    font-family $font-second
    font-size 20px
    color $second-color

//-----------------
.about
  padding 90px 0

  +to-width($screen-sm-max)
    padding 40px 0

  &__list
    margin 30px 0
    +to-width($screen-md-max)
      display block

  &__item
    text-align center

  &__icon
    width 167px
    height 167px
    background-size cover
    margin 0 auto 30px

    &--1
      background-image url(../img/custom/lot1.png)

    &--2
      background-image url(../img/custom/lot2.png)

    &--3
      background-image url(../img/custom/lot3.png)

    &--4
      background-image url(../img/custom/lot4.png)

  &__name
    text-transform uppercase
    position relative

    &:after
      content: ''
      display block
      width 30%
      margin 20px auto 15px
      height 1px
      background-color #000

  &__desc
    font-size 14px
    color #939598


//-----------------
.video
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  background-image url(../img/custom/img-video.jpg)
  background-size cover
  background-position 50% 50%
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  //min-height 500px
  //height 100vh
  +to-width($screen-sm-max)
    min-height auto


//-----------------
.study-program
  background-color #f1f2f2
  background-image url(../img/custom/lotos.png)
  background-position 50% 50%
  background-repeat no-repeat
  padding 100px 0
  +to-width($screen-sm-max)
    padding 40px 0

  &__wrapper
    background-color #fff
    text-align center
    position relative
    border-radius $program-border
    padding 35px
    width $program-width
    margin 0 auto 40px

    +to-width($screen-sm-max)
      width 90%

    &:before
      content: ''
      display block
      border-radius $program-border + 20px
      background-color rgba(0,0,0,.1)
      position absolute
      left -10px
      right -10px
      top -10px
      bottom -10px
      z-index -1

  &__title
    font-family $font-second
    font-size 20px
    color $second-color
    font-weight normal
    margin-bottom 20px
    letter-spacing 0.5px
    position relative
    +to-width($screen-xs-max)
      font-size 15px

    &:after
      content: ''
      display block
      width 30%
      margin 20px auto 15px
      height 1px
      background-color #000

  &__desc
    color #939598


