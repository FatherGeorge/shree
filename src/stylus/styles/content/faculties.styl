//--- common ------

.responsive-table-1
  width 100%
  border-radius 25px
  background-color #f1f2f2
  +to-width($screen-sm-max)
    border-radius 10px

  td
    padding-top 1.5rem
    padding-left 5px
    padding-right 5px
    text-align center
    border-right solid 3px white

  td:last-child
    border-right 0

  tr:last-child td
    padding-bottom 1.5rem

.underline-link
  text-decoration underline
  cursor pointer

.line-divider
  height 1px
  background-color #cdcece
  margin: 30px 0

.line-divider-short
  height 1px
  background-color black
  width 10%
  margin: 30px auto

.line-divider-in-box
  height 1px
  background-color black
  width 65%
  margin: 10px auto

.line-divider-white
  height 1px
  background-color white
  opacity 0.4
  width 40%
  margin: 25px auto 20px

.list-in-oval
  padding 60px 0
  font-size 12px
  line-height 1.6rem
  +to-width($screen-sm-max)
    padding 40px 0

  &__wrapper
    background-color $gray-color
    text-align center
    position relative
    border-radius 150px
    padding 25px 0
    display flex
    width 80%
    margin 40px auto 40px
    +to-width($screen-md-max)
      width 100%
    +to-width($screen-sm-max)
      flex-direction column
      border-radius 50px
      justify-content center


  &__list-left
    flex-basis: 47%
    text-align right
    list-style none
    +to-width($screen-sm-max)
      flex-basis: 100%
      text-align left
      padding-left 1.3em
      margin auto
      min-width 360px
    :before
      content "·"
      font-size 50px
      vertical-align middle
      text-align center
      visibility hidden
      +to-width($screen-sm-max)
        visibility visible
        padding-right .3em

  &__list-right
    flex-basis: 53%
    list-style none
    text-align left
    padding-left 1.3em
    +to-width($screen-sm-max)
      flex-basis: 100%
      margin auto
      min-width 365px
    :before
      content "·"
      font-size 50px
      vertical-align middle
      text-align center
      padding-right .3em

.two-blocks

  &__with-border
    border 2px solid $gray-color
    border-radius 20px

    &--title
      margin-left 60px
      margin-top 40px
      font-weight normal
      font-size 1.5rem
      color #021026
      +to-width($screen-xm-max)
        margin-left 40px
      +to-width($screen-xs-max)
        margin-left 20px
    ul
      list-style none
      padding-bottom 20px
      li
        margin 0 0 10px
        padding 0 0 0 20px
        &:before
          content ""
          display inline-block
          width 15px
          height 15px
          margin-right 20px
          vertical-align middle
          background-image url(../img/custom/marker.png)
          background-size cover
      +to-width($screen-xm-max)
        padding-left 20px
      +to-width($screen-xs-max)
        padding-left 0
  &__with-backimg
    background-size cover
    background-position 50% 50%
    border-radius 20px
    position relative
    min-height 445px
    +to-width(1185px)
      min-height 415px
    +to-width($screen-md-min)
      min-height 300px

    &--left
      padding 45px 60px 75px
      +to-width($screen-md-max)
        padding 30px 30px 60px
      +to-width($screen-xs-max)
        padding 15px 15px 40px
    &--right
      display flex
      align-items center
      &:before
        content ""
        position absolute
        top 40px
        bottom 40px
        left 40px
        right 40px
        z-index 3
        border 1px solid rgba(255, 255, 255, .5);
        border-radius 15px
        +to-width($screen-xs-max)
          border none
    &:after
      content ""
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2
      background #92278f
      background linear-gradient(45deg, #92278f 0%,#92278f 0%,#00c0f3 100%)
      border-radius 20px
      opacity 0.8

  &__item
    z-index 3
    position relative
    margin auto

  &__with-margin
    margin-top 50px
    margin-bottom 140px
    +to-width($screen-xm-max)
      margin-top 30px
      margin-bottom 70px
  &__title2
    font-weight 300
    font-size 1.5rem
    color white
    text-align center
    text-transform uppercase

.text
  &__bold
    font-weight 500
  &__c
    display block
    text-align center
  &__white
    color white
  &__12light
    font-size 12px
    font-weight 300
    &--pink
      color $second-color
  &__14
    font-size 14px
  &__16
    font-size 16px
  &__16light
    font-size 16px
    font-weight 300
    &--romul
      font-family $font-second
  &__18
    font-size 18px
  &__romul
    font-family $font-second
  &__pink16light
    font-size 16px
    color $second-color
    font-weight 300
  &__gray
    color $dark-gray-color
  &__24
    font-size 20px
    +to-width($screen-sm-max)
      font-size: 20px;
    +to-width($screen-xs-max)
      font-size 16px
    &--pink
      color $second-color
  &__24romul
    font-family $font-second
    font-size 24px
    +to-width($screen-sm-max)
      font-size: 20px;
    +to-width($screen-xs-max)
      font-size 16px
    &--pink
      color $second-color
  &__medium
    font-weight 500
  &__pink
    color $second-color
  &__blue
    color $base-color
  &__black
    color $black-color
