.faculties-about
  padding-top 170px
  &__text
    text-align center

//---------------
.faculties-main
  padding-top 100px

  &__list
    margin-top 30px
    margin-bottom 30px

  &__item
    text-align center

  &__img
    display flex
    justify-content center
    align-items center
    width 100%
    height 250px
    background-size cover
    background-position 50% 50%
    background-repeat no-repeat
    border-radius 25px
    //position relative

    &--1
      background-image url(../img/custom/faculty-veda.jpg)

    &--2
      background-image url(../img/custom/faculty-yoga.jpg)

    &--3
      background-image url(../img/custom/faculty-jyotish.jpg)

    &--4
      background-image url(../img/custom/faculty-vastu.jpg)

    &:after
      content ""
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      z-index 2
      border-radius 25px
      background #92278f
      background linear-gradient(45deg, #92278f 0%,#92278f 0%,#00c0f3 100%)
      opacity 0.5

    > div
      z-index 4
      width 100%
      background-color rgba(0,0,0,.5)

    &--title
      padding 1em 1em
      color white
      font-family $font-second

    &:hover
      > div
        background-color rgba(0,0,0,0)
        transition: all .8s
        color $base-color
      &:before
        border-radius 25px
        background rgba(0,0,0,.5)
        transition: all .5s
        content ""
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        z-index 3

  &__name
    padding-top 2em
    text-transform uppercase
    color $second-color

    &:after
      content: ''
      display block
      width 100%
      margin 20px auto 15px
      height 1px
      background-color #000

  &__desc
    font-size 14px
    line-height 2.5em

//--------------------
.schedule
  padding 50px 0
  +to-width($screen-sm-max)
    padding 30px 0

  &__inner-title
    text-align center
    margin 50px 0 40px
    font-weight 300
    +to-width($screen-sm-max)
      margin-bottom 40px
    +to-width($screen-xs-max)
      margin-bottom 20px

  &__icon

    svg
      width auto
      height 35px
      +to-width($screen-xs-max)
        height 28px

      path
        fill $second-color

//--- common ------
.responsive-table-1
  width 100%
  border-radius 25px
  background-color #f1f2f2
  +to-width($screen-sm-max)
    border-radius 10px

  td
    padding-top 1.5rem
    padding-left 5px
    padding-right 5px
    text-align center
    border-right solid 3px white

  td:last-child
    border-right 0

  tr:last-child td
    padding-bottom 1.5rem

.underline-link
  text-decoration underline
  cursor pointer