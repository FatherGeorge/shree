.modal
  &-wrap
    position fixed
    z-index 2000
    width 100%
    height 100%
    top 0
    left 0
    visibility visible
    opacity 1
    transition all 0.2s ease

    &.hidden
      visibility hidden
      opacity 0
      left 100%

  &-back
    width 100%
    height 100%
    background rgba(0,0,0,.36)
    overflow-y auto
    overflow-x hidden
    text-align center
    white-space nowrap
    font-size 0

    &:before
      content ''
      display inline-block
      height 100%
      width 1px
      margin-left -1px
      vertical-align middle

  &-window
    border-radius: 4px;
    box-shadow: 0 2px 6px 0 rgba(66, 84, 119, 0.22);
    background-color: #ffffff;
    padding 30px
    margin 10px auto
    display inline-block
    vertical-align middle
    text-align left
    white-space normal
    position relative
    &--message
      width 70%
    +to-width(767px)
      margin 54px 15px 20px
      width calc(100% - 30px)
      padding 18px

  &-close
    position absolute
    z-index 10
    top 18px
    right 18px
    width 18px
    height 18px
    text-decoration none
    padding 0
    cursor pointer
    @extend $touchSelectSkip

    span
      display block
      height 18px
      width 18px
      &:before
      &:after
        content ''
        position absolute
        z-index: 5
        display block
        width 22px
        height 2px
        background $base-color
        top: 8px;
        left: -2px;
        transform-origin: center
        transition 0.5s

      &:before
        transform: rotate3d(0, 0, 1, 45deg);

      &:after
        transform: rotate3d(0, 0, 1, -45deg);

  &-body
    background #fff
    width 680px
    color #000

    .title-block__h2
      margin-bottom 10px

    p
      font-size 20px

    .form__wrapper
      font-size 15px
      margin-top 0

    &--message
      width 100%
      textarea
        height 147px

    +to-width($screen-xm-max)
      width 100%