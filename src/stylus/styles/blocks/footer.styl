.footer
  background-color #000000
  color #fff
  padding 45px 0

  &-top
    border-top 1px solid rgba(255,255,255,.3)
    border-bottom 1px solid rgba(255,255,255,.3)
    +to-width($screen-xs-max)
      padding: 30px 0;

  &-bottom
    margin-top 40px

  &__logo
    display block
    width 160px
    height 85px
    margin 0 auto 35px
    background-size cover
    background-image url(../img/custom/logo_footer.png)

  &__menu
    display flex
    justify-content space-between
    align-items center

    & .nav__list
      width 100%

  &__info
    font-size 13px
    color: rgba(255,255,255,.4);
    +to-width($screen-md-max)
      text-align center

  &__links
    display flex
    flex-direction column
    align-items center

    a
      font-size 12px
      color #fff
      text-decoration underline
      text-align center
      +to-width($screen-xs-max)
        margin-bottom 5px

  &__contacts
    display flex
    justify-content flex-end
    align-items center
    margin-left auto
    flex: none;
    > *
      flex none
    +to-width($screen-md-max)
      justify-content center

    svg
      width 30px
      height 30px

      path
        fill $base-color

  &__phone--wrapper
    text-align: right;
    margin-left 15px

  &__phone
    display block
    font-weight 300
    font-size: 20px;
    line-height: 1
    font-family $font-second
    color rgba(255,255,255,0.7)

    &:hover
      color $base-color

.social
  &__list
    display flex
    justify-content flex-end
    align-items center
    +to-width($screen-sm-max)
      justify-content: center;
      margin: 0 0 20px 0;
    +to-width($screen-xs-max)
      margin-bottom 0

  &__item
    display flex
    align-items center
    justify-content center
    width 35px
    height 35px
    border-radius 50%
    border 1px solid $base-color
    transition all .7s
    &:not(:first-child)
      margin-left 20px

    & svg
      width 17px
      height auto
      max-height 17px
      transition all .7s

      path
        fill $base-color
        transition all .7s

    &:hover
      background-color $base-color
      transform translateY(-3px)

      & svg path
        fill #ffffff

.payment
  &__list
    display flex
    align-items flex-start
    justify-content flex-start

    +to-width($screen-sm-max)
      justify-content: center;
      margin: 20px 0;

  &__item
    width auto
    height 25px
    &:not(:last-child)
      margin-right 20px

    img
      max-width 100%
      max-height 100%